<script>
    import Swiper from 'swiper';
    import { Grid, Navigation } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/grid';
    import 'swiper/css/navigation';

    // Initialize Swiper when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        const swiper = new Swiper('.gallery-swiper', {
            // Enable modules
            modules: [Grid, Navigation],
            
            // Navigation configuration
            navigation: {
                nextEl: '.gallery-carousel__nav-btn--right',
                prevEl: '.gallery-carousel__nav-btn--left',
            },
            
            // Responsive breakpoints
            breakpoints: {
                // Mobile: 2 slides
                320: {
                    slidesPerView: 2,
                    spaceBetween: 16,
                    grid: {
                        rows: 1,
                    },
                },
                // Tablet: 3 slides
                768: {
                    slidesPerView: 3,
                    spaceBetween: 20,
                    grid: {
                        rows: 1,
                    },
                },
                // Desktop: 4 slides
                1024: {
                    slidesPerView: 4,
                    spaceBetween: 24,
                    grid: {
                        rows: 1,
                    },
                },
            },
            
            // Performance optimizations
            watchSlidesProgress: true,
            preventClicks: false,
            preventClicksPropagation: false,
            
            // Touch and mouse events
            touchEventsTarget: 'container',
            shortSwipes: true,
            longSwipes: true,
            longSwipesRatio: 0.5,
            longSwipesMs: 300,
            
            // Auto height
            autoHeight: false,
            
            // Speed
            speed: 400,
            
            // Effect
            effect: 'slide',
        });

        // Function to update navigation button states
        function updateNavigationButtons() {
            const leftBtn = document.querySelector('.gallery-carousel__nav-btn--left') as HTMLButtonElement;
            const rightBtn = document.querySelector('.gallery-carousel__nav-btn--right') as HTMLButtonElement;
            
            if (leftBtn && rightBtn && swiper) {
                // Disable left button if at beginning
                if (swiper.isBeginning) {
                    leftBtn.disabled = true;
                    leftBtn.classList.add('gallery-carousel__nav-btn--disabled');
                } else {
                    leftBtn.disabled = false;
                    leftBtn.classList.remove('gallery-carousel__nav-btn--disabled');
                }
                
                // Disable right button if at end
                if (swiper.isEnd) {
                    rightBtn.disabled = true;
                    rightBtn.classList.add('gallery-carousel__nav-btn--disabled');
                } else {
                    rightBtn.disabled = false;
                    rightBtn.classList.remove('gallery-carousel__nav-btn--disabled');
                }
            }
        }

        // Update buttons on all relevant events
        swiper.on('init', updateNavigationButtons);
        swiper.on('slideChange', updateNavigationButtons);
        swiper.on('reachBeginning', updateNavigationButtons);
        swiper.on('reachEnd', updateNavigationButtons);
        swiper.on('resize', updateNavigationButtons);
        swiper.on('breakpoint', updateNavigationButtons);

        // Initial update after a short delay to ensure everything is rendered
        setTimeout(updateNavigationButtons, 100);
        
        // Also update on window resize
        window.addEventListener('resize', () => {
            setTimeout(updateNavigationButtons, 100);
        });
        
        // Quick view functionality
        const quickViewButtons = document.querySelectorAll('.gallery-carousel__quick-view-btn');
        quickViewButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                
                // Get product info from the button's aria-label
                const productName = button.getAttribute('aria-label')?.replace('Quick view ', '') || 'Product';
                
                // Here you can implement your quick view modal or navigation
                // For now, we'll just log the action
                console.log(`Quick view clicked for: ${productName}`);
                
                // Example: You could open a modal, navigate to product page, etc.
                // openQuickViewModal(productName);
            });
        });
    });
</script>


