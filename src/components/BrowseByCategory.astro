<script>
    import Swiper from 'swiper';
    import { Grid, Navigation } from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/grid';
    import 'swiper/css/navigation';

    document.addEventListener('DOMContentLoaded', function() {
        const swiper = new Swiper('.browse-swiper', {
            modules: [Grid, Navigation],
            navigation: {
                nextEl: '#browse-by-category .gallery-carousel__nav-btn--right',
                prevEl: '#browse-by-category .gallery-carousel__nav-btn--left',
            },
            breakpoints: {
                320: { slidesPerView: 2, spaceBetween: 16, grid: { rows: 1 } },
                768: { slidesPerView: 3, spaceBetween: 20, grid: { rows: 1 } },
                1024: { slidesPerView: 4, spaceBetween: 24, grid: { rows: 1 } },
            },
            watchSlidesProgress: true,
            preventClicks: false,
            preventClicksPropagation: false,
            touchEventsTarget: 'container',
            shortSwipes: true,
            longSwipes: true,
            longSwipesRatio: 0.5,
            longSwipesMs: 300,
            autoHeight: false,
            speed: 400,
            effect: 'slide',
        });

        function updateNavigationButtons() {
            const leftBtn = document.querySelector('#browse-by-category .gallery-carousel__nav-btn--left') as HTMLButtonElement;
            const rightBtn = document.querySelector('#browse-by-category .gallery-carousel__nav-btn--right') as HTMLButtonElement;
            if (leftBtn && rightBtn && swiper) {
                if (swiper.isBeginning) {
                    leftBtn.disabled = true;
                    leftBtn.classList.add('gallery-carousel__nav-btn--disabled');
                } else {
                    leftBtn.disabled = false;
                    leftBtn.classList.remove('gallery-carousel__nav-btn--disabled');
                }
                if (swiper.isEnd) {
                    rightBtn.disabled = true;
                    rightBtn.classList.add('gallery-carousel__nav-btn--disabled');
                } else {
                    rightBtn.disabled = false;
                    rightBtn.classList.remove('gallery-carousel__nav-btn--disabled');
                }
            }
        }

        swiper.on('init', updateNavigationButtons);
        swiper.on('slideChange', updateNavigationButtons);
        swiper.on('reachBeginning', updateNavigationButtons);
        swiper.on('reachEnd', updateNavigationButtons);
        swiper.on('resize', updateNavigationButtons);
        swiper.on('breakpoint', updateNavigationButtons);

        setTimeout(updateNavigationButtons, 100);
        window.addEventListener('resize', () => setTimeout(updateNavigationButtons, 100));

        const quickViewButtons = document.querySelectorAll('#browse-by-category .gallery-carousel__quick-view-btn');
        quickViewButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                const categoryName = button.getAttribute('aria-label')?.replace('View category ', '') || 'Category';
                console.log(`Category clicked: ${categoryName}`);
            });
        });
    });
</script>


