---
import './InfoSection.css';
---

<section class="info" aria-label="Store highlights">
	<div class="container info__container">
		<div class="info__item">
			<div class="info__icon" aria-hidden="true">
				<!-- Delivery box icon -->
				<svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
					<path d="M3 7h18v12H3z"/>
					<path d="M3 11h18M8 15h.01"/>
				</svg>
			</div>
			<h3 class="info__title">Complimentary Delivery</h3>
		</div>

		<div class="info__item">
			<div class="info__icon" aria-hidden="true">
				<!-- Returns icon (arrow into box) -->
				<svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
					<path d="M4 6h14v12H4z"/>
					<path d="M10 12h8"/>
					<polyline points="12 10 10 12 12 14"/>
				</svg>
			</div>
			<h3 class="info__title">Easy Return Or Exchange</h3>
		</div>

		<div class="info__item">
			<div class="info__icon" aria-hidden="true">
				<!-- Envelope / gift wrapping icon -->
				<svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
					<path d="M3 5h18v14H3z"/>
					<path d="M3 7l9 6 9-6"/>
					<path d="M13.2 11a1.2 1.2 0 1 1-2.4 0a1.2 1.2 0 0 1 2.4 0z"/>
					<path d="M12 12.2v1.8"/>
				</svg>
			</div>
			<h3 class="info__title">Free Gift Wrapping</h3>
		</div>
	</div>
</section> 